
  
      <header class='header'>
        <div>
          {{> logo}}
        </div>
        <nav class='header-nav'>
          <div class="header_nav_right">
            {{> nav list=header}}
          </div>
        </nav>
      </header>

      
      {{#with main}}
      <div class="main">
        <img src="{{image}}" alt="main image" class="main_img">  
        <div class="main_content">
            <h1 class="main_title">{{heading}}</h1>
            <p class="main_text">{{descriotion}}</p> 
            <a href="{{href}}" class="main_button">{{button}}</a>      
        </div>             
      </div>     
      {{/with}}
      
     
      <main class="featured">
        {{#each featured}}
        {{> cardFeatured data=this}}
        {{/each}}
      </main>
      
     <div class="actions">
      {{#each actions}}
      <div>
        <h3 class="actions_title">{{heading}}</h3>
        <a href="{{url}}" class="button actions_button">{{text}}</a>
      </div>
      {{/each}}
     </div>
      


    <footer class="page_block">

      <div class="footer">
        <div>
          {{> logo}}
          <span class="footer_copyright">Copyright 2023-2024</span>
        </div>
        {{#each footer}}
        <div>
          <span class="footer_title">{{title}}</span>
          {{> nav list=links isVertical=true}}
        </div>
        {{/each}}
      </div>
    </footer>

